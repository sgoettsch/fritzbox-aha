{
    "name": "sgoettsch/fritzbox-aha",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jan Knipper",
            "email": "github@jakni.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "sgoettsch\\FritzboxAHA\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "sgoettsch\\FritzboxAHATest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "phpcurl/curlwrapper": "^3.0",
        "ext-curl": "*",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.5",
        "phpunit/phpunit": "^8",
        "satooshi/php-coveralls": "^1.0",
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "test": "php vendor/bin/phpunit",
        "phpcs": "php vendor/bin/phpcs",
        "phpmd": "php vendor/bin/phpmd src/,tests/,examples/ text cleancode,codesize,controversial,design,naming,unusedcode"
    }
}
